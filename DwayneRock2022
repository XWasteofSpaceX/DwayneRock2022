#!/usr/bin/env pybricks-micropython
from pybricks import ev3brick as brick
from pybricks.hubs import EV3Brick
from pybricks.ev3devices import (Motor, TouchSensor, ColorSensor,
                                 InfraredSensor, UltrasonicSensor, GyroSensor)
from pybricks.parameters import (Port, Stop, Direction, Button, Color,
                                 SoundFile, ImageFile, Align)
from pybricks.tools import print, wait, StopWatch
from pybricks.robotics import DriveBase
from pybricks.media.ev3dev import SoundFile, ImageFile
from pybricks.tools import wait, StopWatch, DataLog

ev3 = EV3Brick()

# Write your program here
left_motor = Motor(Port.B)
right_motor = Motor(Port.C)
arm_motor = Motor(Port.A)
robot = DriveBase(left_motor, right_motor, wheel_diameter=55.5, axle_track=104)

obstacle_sensor = UltrasonicSensor(Port.S4)
colour_sensor = ColorSensor(Port.S3)

# drive(drive_speed, turn_rate)

robot.turn(-40)
ev3.speaker.beep()

robot.drive(200,0)
while obstacle_sensor.distance() > 300:
    wait(10)
robot.stop()
ev3.speaker.beep()


#run arm motor (speed mm/s, rotational angle)
arm_motor.run_angle(-70,90)
# Go backwards for 100mm
robot.straight(-300)
#run arm motor (speed mm/s, rotational angle,wait for maneuver)
arm_motor.run_angle(70,-190,Stop.HOLD,False)
robot.straight(-200)

#arm_motor.run_angle(-100,120)
robot.stop()
 
#arm_motor.run_angle(-100,120,Stop.HOLD,False)
#robot.straight(-200)
